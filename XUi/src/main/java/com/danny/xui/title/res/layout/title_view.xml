<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">

        <ImageView
            android:id="@+id/x_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:padding="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/x_title_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/ic_menu"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.danny.xui.MarqueeView
            android:id="@+id/x_title_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="跑马灯"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/x_title_back"
            app:layout_constraintEnd_toStartOf="@id/x_title_menu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
