<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#A0000000">

    <ImageView
        android:id="@+id/activities_bg"
        android:layout_width="330dp"
        android:layout_height="417dp"
        android:background="@color/color_ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/activities_btn"
        android:layout_width="330dp"
        android:layout_height="37dp"
        android:text="确定"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#3786ff"
        app:layout_constraintBottom_toBottomOf="@id/activities_bg"
        app:layout_constraintStart_toStartOf="@id/activities_bg"
        app:layout_constraintEnd_toEndOf="@id/activities_bg"/>

    <ImageView
        android:id="@+id/activities_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/color_f25d5d"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/activities_bg"
        app:layout_constraintBottom_toTopOf="@id/activities_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>